<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_toolbar_bg"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/main_meiyan_RL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_meiyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/main_tab_margin_top"
            android:background="@drawable/tab_meiyan_selector"
            android:gravity="center_horizontal"
            android:textColor="@color/xy_gray_text_color"
            android:textSize="12sp" />


    </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/main_yanzhi_RL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        <TextView
            android:id="@+id/main_yanzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_yanzhi_selector"
            android:gravity="center_horizontal"
            android:textColor="@color/xy_gray_text_color"
            android:textSize="12sp" />
        

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_discover_RL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_tab_discover"
            android:padding="7dp"
            android:drawablePadding="@dimen/app_main_bottom_drawpadding"
            android:gravity="center_horizontal"
            android:textColor="@color/xy_gray_text_color"
            android:textSize="12sp" /> 

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_message_RL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_message_btn"
            android:gravity="center_horizontal"
            android:textColor="@color/xy_gray_text_color"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_my_RL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_my_xingyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_myself_btn"
            android:gravity="center_horizontal"
            android:textColor="@color/xy_gray_text_color"
            android:textSize="12sp" />

    </RelativeLayout>
  
</LinearLayout>